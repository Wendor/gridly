{
  "name": "gridly",
  "version": "1.0.0",
  "description": "A Tauri application with Vue and TypeScript",
  "author": "example.com",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:web",
    "frontend:dev": "vite",
    "frontend:build": "npm run typecheck && vite build",
    "tauri": "tauri",
    "dev": "tauri dev",
    "build": "tauri build",
    "db:up": "cd src-tauri/docker && docker-compose up -d",
    "db:down": "cd src-tauri/docker && docker-compose down",
    "test:backend:unit": "cd src-tauri && cargo test --lib",
    "test:backend:integration": "npm run db:up && cd src-tauri && cargo test --test integration_tests --test full_cycle_tests",
    "test:backend": "npm run test:backend:unit && npm run test:backend:integration"
  },
  "dependencies": {
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-sql": "^6.10.0",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@types/markdown-it": "14.1.2",
    "markdown-it": "14.1.0",
    "pinia": "^3.0.4",
    "sql-formatter": "^15.7.0",
    "vue-codemirror": "^6.1.1",
    "vue-i18n": "^11.2.8"
  },
  "devDependencies": {
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/cli": "^2.9.6",
    "@types/node": "^22.19.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.6.2",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.2.6",
    "vue": "^3.5.25",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.1.6"
  }
}
